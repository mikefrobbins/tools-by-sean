        "RHEL",
        "runbook",
        "runbooks",
        "Runspace",
        "runspaces",
        "runtimes",
        "scalability",
        "scanability",
        "SCCM",
        "scriptable",
        "scriptblocks",
        "scripter",
        "scripters",
        "Sddl",
        "SDKs",
        "sdwheeler",
        "sewhee",
        "Snover",
        "Sqlcmd",
        "subfolder",
        "subkey",
        "subkeys",
        "subnet",
        "subnets",
        "Symlink",
        "taskbar",
        "triaged",
        "Ubuntu",
        "unencrypted",
        "Uninstallation",
        "untrusted",
        "updateable",
        "virtualized",
        "virtualizes",
        "w3wp",
        "walkthrough",
        "Webservice",
        "winget",
        "workgroup"
    ],
    "csharp.suppressDotnetRestoreNotification": true,
    "debug.showInStatusBar": "always",
    // Docs Extension settings
    "docs-build.real-TimeValidation.automaticallyEnable": false,
    "docs-build.userType": "Microsoft Employee",
    "docs.scaffolding.alias": "sewhee",
    "docs.scaffolding.githubid": "sdwheeler",
    "docs.scaffolding.product": "powershell",
    "docs.templates.alias": "sewhee",
    "docs.templates.githubid": "sdwheeler",
    // Editor
    "editor.acceptSuggestionOnEnter": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.detectIndentation": true,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "'Cascadia Code PL',Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.guides.bracketPairs": true,
    "editor.guides.highlightActiveIndentation": true,
    "editor.guides.indentation": true,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    //"editor.rulers": [ 1, 2, 3, 4, 5, 76, 80],
    "editor.rulers": [ 1, 2, 3, 4, 5, 76, 80, 90, 100, 150, 300 ],
    "editor.wordWrap": "wordWrapColumn",
    //"editor.wordWrapColumn": 80,
    "editor.wordWrapColumn": 100,
    "errorLens.enabled": false,
    "errorLens.enabledDiagnosticLevels": [
        "warning",
        "info"
    ],
    // Explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    // Extensions
    "extensions.autoUpdate": true,
    // Files
    "files.autoGuessEncoding": true,
    "files.defaultLanguage": "PowerShell",
    "files.trimTrailingWhitespace": true,
    // git extension
    "git.autofetch": true,
    "git.enableStatusBarSync": false,
    "git.showActionButton": {
        "commit": true,
        "publish": true,
        "sync": false
    },
    "git.postCommitCommand": "push",
    // github issues-prs
    "github.repositories": [
        "powershell/powershell-docs",
        "powershell/powershell-docs-dsc",
        "powershell/powershell-docs-modules",
        "powershell/powershell"
    ],
    "github.username": "sdwheeler",
    // GitLens settings
    "gitlens.blame.toggleMode": "window",
    "gitlens.mode.active": "zen",
    // Gremlins
    "gremlins.showInProblemPane": true,
    // JSON
    "json.maxItemsComputed": 8000,
    // Docs.linting
    "linting.disableLintingRules": false,
    // liveshare
    "liveshare.accessibility.soundsEnabled": false,
    // Mardown-PDF
    "markdown-pdf.format": "Letter",
    "markdown-pdf.margin.bottom": "0.75in",
    "markdown-pdf.margin.left": "0.5in",
    "markdown-pdf.margin.right": "0.5in",
    "markdown-pdf.margin.top": "0.75in",
    // Configure markdown extension
    "markdown.docsetLanguages": [
        "Bash",
        "C#",
        "JSON",
        "Managed Object Format",
        "PowerShell",
        "XML",
        "YAML"
    ],
    "markdown.previewFeatures": true,
    "markdown.replaceSmartQuotes": true,
    "markdown.showToolbar": true,
    // MDLint
    "markdownlint.config": {
        "blanks-around-fences": true,
        "blanks-around-headers": true,
        "blanks-around-lists": true,
        "code-block-style": {
            "style": "fenced"
        },
        "code-fence-style": {
            "style": "backtick"
        },
        "commands-show-output": true,
        "docsmd.alert": true,
        "docsmd.codesnippet": true,
        "docsmd.column": true,
        "docsmd.image": true,
        "docsmd.moniker": true,
        "docsmd.no-loc": true,
        "docsmd.row": true,
        "docsmd.securelinks": true,
        "docsmd.syntax": true,
        "docsmd.video": true,
        "docsmd.xref": true,
        "docsmd.zone": true,
        "emphasis-style": {
            "style": "underscore"
        },
        "fenced-code-language": false,
        "first-line-h1": {
            "front_matter_title": ""
        },
        "header-increment": true,
        "header-start-left": true,
        "header-style": {
            "style": "atx"
        },
        "hr-style": {
            "style": "---"
        },
        "line-length": {
            "code_block_line_length": 90, // 74 for about topics
            "code_blocks": true,
            "heading_line_length": 79,
            "headings": true,
            "line_length": 100, // 79 for about topics
            "stern": true,
            "strict": false,
            "tables": false
        },
        "list-indent": true,
        "list-marker-space": true,
        "no-alt-text": true,
        "no-bare-urls": true,
        "no-blanks-blockquote": true,
        "no-duplicate-header": {
            "siblings_only": true
        },
        "no-emphasis-as-header": true,
        "no-empty-links": true,
        "no-hard-tabs": true,
        "no-inline-html": {
            "allowed_elements": [
                "a",
                "br",
                "code",
                "kbd",
                "li",
                "properties",
                "sup",
                "tags",
                "ul"
            ]
        },
        "no-missing-space-atx": true,
        "no-missing-space-closed-atx": true,
        "no-multiple-blanks": true,
        "no-multiple-space-atx": true,
        "no-multiple-space-blockquote": true,
        "no-multiple-space-closed-atx": true,
        "no-reversed-links": true,
        "no-space-in-code": true,
        "no-space-in-emphasis": true,
        "no-space-in-links": true,
        "no-trailing-punctuation": {
            "punctuation": ".,;:!。，；：！？"
        },
        "no-trailing-spaces": {
            "br_spaces": 2,
            "strict": true
        },
        "ol-prefix": {
            "style": "one"
        },
        "proper-names": {
            "code_blocks": false,
            // Moved to vale jargon file
            //"names": ["PowerShell","IntelliSense","Authenticode","CentOS","Contoso","CoreOS","Debian","Ubuntu","openSUSE","RHEL","JavaScript",".NET","NuGet","VS Code","Newtonsoft"]
        },
        "required-headers": false,
        "single-h1": {
            "front_matter_title": "",
            "level": 1
        },
        "single-trailing-newline": true,
        "strong-style": {
            "style": "asterisk"
        },
        "ul-indent": {
            "indent": 2,
            "start_indented": false
        },
        "ul-start-left": true,
        "ul-style": {
            "style": "dash"
        }
    },
    "markdownlint.customRules": [
        "{docsmsft.docs-linting}/markdownlint-custom-rules/rules.js"
    ],
    "omnisharp.projectLoadTimeout": 120,
    // PowerShell
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.newLineAfterCloseBrace": false,
    "powershell.codeFormatting.newLineAfterOpenBrace": true,
    "powershell.codeFormatting.preset": "Custom",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useConstantStrings": true,
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": true,
    "powershell.integratedConsole.forceClearScrollbackBuffer": true,
    "powershell.powerShellDefaultVersion": "PowerShell (x64)",
    "powershell.scriptAnalysis.enable": true,
    // Redhat
    "redhat.telemetry.enabled": true,
    //"reflowMarkdown.preferredLineLength": 79,
    "reflowMarkdown.preferredLineLength": 100,
    // SCM
    "scm.defaultViewMode": "tree",
    // Security
    "security.workspace.trust.untrustedFiles": "open",
    // Selectline
    "selectline.displayFormat": "$(list-ordered) Lines: %d",
    "selectline.statusbarPriority": 1,
    // Terminal
    "terminal.external.windowsExec": "C:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.fontFamily": "'Cascadia Code PL', Consolas, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.minimumContrastRatio": 5.5,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.shellIntegration.enabled": true,
    "vale.core.useCLI": true,
    "vale.valeCLI.path": "C:/Public/Toolbox/vale.exe",
    "vale.valeCLI.config": "C:/Users/sewhee/.vale/.vale.ini",
    "vale.valeCLI.minAlertLevel": "suggestion",
    // VS Icons
    "vsicons.dontShowNewVersionMessage": true,
    "window.closeWhenEmpty": true,
    // Window settings
    "window.restoreWindows": "none",
    "window.title": "${dirty}${separator}${rootName}${separator}${activeFolderShort}${separator}${activeEditorShort}",
    // Workbench settings
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.restoreViewState": false,
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    // XML settings
    "xml.fileAssociations": [
        {
            "pattern": "**/*.Format.ps1xml",
            "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Format.xsd"
        },
        {
            "pattern": "**/*.Types.ps1xml",
            "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Types.xsd"
        }
    ],
    // YAML settings
    "yaml.format.enable": true,
    "yaml.schemas": {
        "file:///toc.schema.json": "/toc\\.yml/i"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "xml.server.binary.trustedHashes": [
        "34f51b1d8c3b85bf8af72502c3a52ca841d11cf76f848be198631e0dd2b7e169"
    ],
    "notebook.lineNumbers": "on"
}
